{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "LINQ_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "release",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "LINQ_BUILD_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-base",
      "hidden": true
    },
    {
      "name": "dev",
      "inherits": "build-base",
      "configurePreset": "dev"
    },
    {
      "name": "release",
      "inherits": "build-base",
      "configurePreset": "release"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "dev"
    }
  ],
  "workflowPresets": [
    {
      "name": "dev",
      "steps": [
        {
          "name": "dev",
          "type": "configure"
        },
        {
          "name": "dev",
          "type": "build"
        }
      ]
    }
  ]
}